<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#4285F4"/> <!-- Button color when pressed -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#4285F4"/> <!-- Normal button color -->
            <corners android:radius="25dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
